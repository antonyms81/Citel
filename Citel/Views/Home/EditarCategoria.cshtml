@model Citel.Models.ProdutoCategoriaViewModel
@{
    ViewData["Title"] = "Editar Categoria";
}

<div class="container">

    @if (TempData["ViewDataAlert"] != null)
    {
        <div class="alert alert-warning" role="alert">
            <strong> </strong>
            @TempData["ViewDataAlert"]
        </div>
    }

    <h3>Cadastro de Produtos</h3>

    @using (Html.BeginForm("EditarCategoria", "Home", FormMethod.Post, new { id = "FormCategoria", name = "FormCayegoria" }))
    {
        <input type="hidden" id="IdCategoria" name="Idcategoria" value="@Model.IdCategoria" />
        <div class="row" style="padding-bottom:20px;">

            <div class="row" style="padding-bottom:20px;">
                <div class="col-md-7">
                    <label for="NomeCategoria"><b>NOME CATEGORIA*</b></label>
                    <input id="NomeCategoria" name="NomeCategoria" class="required form-control" labelForError="NomeCategoria" placeholder="" type="text" value="@Model?.NomeCategoria">
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-md-4">
                <div style="padding-top:20px;">
                    <button type="submit" value="AtualizarCategoria" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </div>
    }
</div>








<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>

<script type="text/javascript">
    $("#Preco").mask('000.000.000.000.000,00', { reverse: true });
</script>




